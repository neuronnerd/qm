<!-- templates/base.jinja -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{% block title %}Quantum Minds{% endblock %}</title>
    
    <!-- Global CSS -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/global.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/loader.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/initial-loader.css') }}">
    {% if request.endpoint == 'verify_routes.verify_certificate' %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/verify-loader.css') }}">
    {% endif %}
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&family=Space+Grotesk:wght@300;400&display=swap" rel="stylesheet">
    
    <!-- Page-Specific CSS -->
    {% block page_style %}
    <!-- Page-specific styles go here -->
    {% endblock %}
</head>
<body>
    <!-- Initial Loader -->
    {% if request.endpoint != 'verify_routes.verify_certificate' %}
    <div id="initial-loader" class="initial-loader">
        <div class="loader-content">
            <div id="brand-text" class="brand-text">
                <span class="brand-text-content">
                    <span class="brand-text-word">Quantum</span>
                    <span class="brand-text-word">Minds</span>
                </span>
            </div>
            <div id="hero-text" class="hero-text">
                <div class="typing-text">Empowering Minds to Shape the Future of Technology</div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Verify Loader -->
    {% if request.endpoint == 'verify_routes.verify_certificate' %}
    <div id="verify-loader" class="verify-loader" data-error="{{ 'true' if error else 'false' }}">
        <div class="verification-container">
            <svg class="verification-circle" viewBox="0 0 100 100">
                <circle class="progress-ring" cx="50" cy="50" r="45"/>
                <circle class="progress-ring-fill" cx="50" cy="50" r="45"/>
            </svg>
            <div class="verification-status">
                <svg class="checkmark" viewBox="0 0 52 52">
                    <circle class="checkmark-circle" cx="26" cy="26" r="25"/>
                    <path class="checkmark-check" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
                </svg>
                <svg class="crossmark" viewBox="0 0 52 52">
                    <circle class="crossmark-circle" cx="26" cy="26" r="25"/>
                    <path class="crossmark-x" d="M16 16L36 36M36 16L16 36"/>
                </svg>
                <div class="status-text"></div>
            </div>
        </div>
        <div class="result-container">
            <h2 class="result-text"></h2>
            <p class="result-subtext"></p>
        </div>
    </div>
    {% endif %}
    
    <!-- Loader Overlay -->
    <div id="loader-overlay" class="loader-overlay">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <!-- Include Header -->
    {% include 'partials/header.html' %}

    <main>
        {% block content %}
        <!-- Content specific to each page -->
        {% endblock %}
    </main>

    <!-- Include Footer -->
    {% include 'partials/footer.html' %}

    <!-- Essential Scripts -->
    <script src="{{ url_for('static', filename='js/scriptManager.js') }}"></script>
    <script src="{{ url_for('static', filename='js/router.js') }}"></script>
    {% if request.endpoint != 'verify_routes.verify_certificate' %}
    <script src="{{ url_for('static', filename='js/initial-loader.js') }}"></script>
    {% else %}
    <script src="{{ url_for('static', filename='js/verify-loader.js') }}"></script>
    {% endif %}

    {% block page_script %}
    <!-- Page-specific scripts go here -->
    {% endblock %}
</body>
</html>
