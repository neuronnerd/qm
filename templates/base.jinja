<!-- templates/base.jinja -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
    <title>{% block title %}Quantum Minds{% endblock %}</title>
    
    {% from 'includes/global.css.jinja' import load_global_css %}
    {{ load_global_css() }}
    
    <link rel="manifest" href="{{ url_for('static', filename='site.webmanifest') }}">
    <meta name="theme-color" content="#4f46e5">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="QM">
    <link rel="apple-touch-icon" href="{{ url_for('static', filename='images/icon-192.png') }}">

    <!-- Page-Specific CSS -->
    {% block page_style %}
    <!-- Page-specific styles go here -->
    {% endblock %}
</head>
<body>
    <!-- Include Loader Components -->
    {% include 'partials/loader.html' %}

    <!-- Include Header -->
    {% include 'partials/header.html' %}

    <main>
        {% block content %}
        <!-- Content specific to each page -->
        {% endblock %}
    </main>

    <!-- Include Footer -->
    {% include 'partials/footer.html' %}

    <!-- Essential Scripts -->
    <script src="{{ url_for('static', filename='js/scriptManager.js') }}"></script>
    <script src="{{ url_for('static', filename='js/router.js') }}"></script>
    <script src="{{ url_for('static', filename='js/initial-loader.js') }}"></script>

    {% block page_script %}
    <!-- Page-specific scripts go here -->
    {% endblock %}
    
    <!-- Service Worker Registration -->
    <script src="{{ url_for('static', filename='js/register-sw.js') }}"></script>
</body>
</html>
