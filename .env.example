#######################
# Core Configuration #
#######################
# Security
SESSION_SECRET_KEY=your-32-character-secret-key
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=false     # Enable/disable debug mode (true/false)

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_API_KEY=your-supabase-anon-key

#######################
# Database Settings  #
#######################
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_POOL_SIZE=100
DB_MAX_OVERFLOW=50
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

#######################
# Logging Settings   #
#######################
LOGS=false
LOG_LEVEL=INFO       # Options: DEBUG, INFO, WARNING, ERROR
FILE_LOGGING=true

#######################
# Cloudinary Settings #
#######################
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

#######################
# Application Settings #
#######################
INIT_ADMIN_USER=False  # Enable to create initial admin user (True/False)